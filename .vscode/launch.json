    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Rust Haya",
            "cargo": {
                "args": [
                    "build",
                    "--bin=haya",
                    "--package=haya"
                ],
                "filter": {
                    "name": "haya",
                    "kind": "bin"
                }
            },
            "program": "${cargo:program}",
            "args": [],
            "cwd": "${workspaceFolder}/packages/haya",
            "sourceLanguages": ["rust"]
        }
    ]
}
